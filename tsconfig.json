{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"], // 要使用的类型库
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    // "paths": {
    //   "@/*": ["./src/*"]
    // },
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "noImplicitAny": false,
    "declaration": false,
    "removeComments": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**__tests__",
    "dist/**"
  ]
}
